{
    "version": 2,
    "builds": [
      {
        "src": "public/index.php",
        "use": "@vercel-community/php@0.6.1"
      },
      {
        "src": "public/**/*.+(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "public/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "public/index.php"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://votre-domaine.vercel.app",
      "LOG_CHANNEL": "stderr",
      "SESSION_DRIVER": "cookie",
      "CACHE_DRIVER": "file",
      "VIEW_COMPILED_PATH": "/tmp/views"
    }
  }